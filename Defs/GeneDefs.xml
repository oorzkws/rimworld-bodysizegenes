<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneCategoryDef>
        <defName>Body_Size</defName>
        <label>body size</label>
        <displayPriorityInXenotype>225</displayPriorityInXenotype>
    </GeneCategoryDef>

    <GeneDef Name="GeneBodySizeBase" Abstract="True">
        <displayCategory>Body_Size</displayCategory>
        <exclusionTags>
          <li>BodySize</li>
        </exclusionTags>
        <biostatCpx>0</biostatCpx>
        <biostatMet>0</biostatMet>
        <selectionWeight>0</selectionWeight>
        <canGenerateInGeneSet>false</canGenerateInGeneSet>
        <endogeneCategory>BodyType</endogeneCategory>
    </GeneDef>

    <GeneDef ParentName="GeneBodySizeBase">
        <defName>BodySizeBiggest</defName>
        <label>giant</label>
        <description>Carriers of this gene grow to an astonishing size.</description>
        <iconPath>UI/Icons/Genes/Gene_BodyHulk</iconPath>
        <displayOrderInCategory>1050</displayOrderInCategory>
        <biostatCpx>1</biostatCpx>
        <biostatMet>-3</biostatMet>
        <statFactors>
            <bodySizeFactor>1.5</bodySizeFactor>
        </statFactors>    
    </GeneDef>

    <GeneDef ParentName="GeneBodySizeBase">
        <defName>BodySizeBigger</defName>
        <label>tower</label>
        <description>Carriers of this gene stand head and shoulders above baseline humans.</description>
        <iconPath>UI/Icons/Genes/Gene_BodyHulk</iconPath>
        <displayOrderInCategory>1040</displayOrderInCategory>
        <biostatCpx>1</biostatCpx>
        <biostatMet>-2</biostatMet>
        <statFactors>
            <bodySizeFactor>1.25</bodySizeFactor>
        </statFactors>    
    </GeneDef>

    <GeneDef ParentName="GeneBodySizeBase">
        <defName>BodySizeBig</defName>
        <label>alpha</label>
        <description>Carriers of this gene grow taller than most.</description>
        <iconPath>UI/Icons/Genes/Gene_BodyStandard</iconPath>
        <displayOrderInCategory>1030</displayOrderInCategory>
        <biostatCpx>1</biostatCpx>
        <biostatMet>1</biostatMet>
        <statFactors>
            <bodySizeFactor>1.1</bodySizeFactor>
        </statFactors>    
    </GeneDef>

    <GeneDef ParentName="GeneBodySizeBase">
        <defName>BodySizeSmall</defName>
        <label>manlet</label>
        <description>Carriers of this gene end up shorter than most.</description>
        <iconPath>UI/Icons/Genes/Gene_BodyStandard</iconPath>
        <displayOrderInCategory>1020</displayOrderInCategory>
        <biostatCpx>1</biostatCpx>
        <biostatMet>1</biostatMet>
        <statFactors>
            <bodySizeFactor>0.9</bodySizeFactor>
        </statFactors>    
    </GeneDef>

    <GeneDef ParentName="GeneBodySizeBase">
        <defName>BodySizeSmaller</defName>
        <label>dwarf</label>
        <description>Carriers of this gene end up very short in stature. There is no scientific proof this causes an affinity for alcohol or mining.</description>
        <iconPath>UI/Icons/Genes/Gene_BodyThin</iconPath>
        <displayOrderInCategory>1010</displayOrderInCategory>
        <biostatCpx>1</biostatCpx>
        <biostatMet>2</biostatMet>
        <statFactors>
            <bodySizeFactor>0.8</bodySizeFactor>
        </statFactors>        
    </GeneDef>
    
    <GeneDef ParentName="GeneBodySizeBase">
        <defName>BodySizeSmallest</defName>
        <label>pixie</label>
        <description>Carriers of this gene rarely develop beyond what would be considered pocket-sized to a baseline human.</description>
        <iconPath>UI/Icons/Genes/Gene_BodyThin</iconPath>
        <displayOrderInCategory>1000</displayOrderInCategory>
        <biostatCpx>1</biostatCpx>
        <biostatMet>4</biostatMet>
        <statFactors>
            <bodySizeFactor>0.7</bodySizeFactor>
        </statFactors>        
    </GeneDef>
</Defs>